    <!-- 按省份统计数量的查询 -->
    <select id="selectProvinceCount" resultType="java.util.Map">
        SELECT province AS "province", COUNT(*) AS "count"
        FROM scenic_spot
        GROUP BY province
    </select>

    <!-- 修改 selectAll 查询语句，从 scenic_spot 表中获取数据 -->
    <select id="selectAll" resultType="com.redtourism.entity.Geocoding">
        SELECT id, name, province, address, longitude AS lng, latitude AS lat
        FROM scenic_spot
    </select>

