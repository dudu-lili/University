<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.redtourism.mapper.RedGeocodingMapper">


    <resultMap id="BaseResultMap" type="com.redtourism.entity.Geocoding">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="province" property="province" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="lng" property="lng" jdbcType="DECIMAL"/>
        <result column="lat" property="lat" jdbcType="DECIMAL"/>
    </resultMap>



    <!-- 按省份统计数量的查询 -->
    <select id="selectProvinceCount" resultType="java.util.Map">
        SELECT province AS "province", COUNT(*) AS "count"
        FROM red_scenic
        GROUP BY province
    </select>


    <select id="selectAll" resultMap="BaseResultMap">
        SELECT id, name, province, address, lng, lat
        FROM red_scenic
    </select>
</mapper>
